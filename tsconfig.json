{
  "compilerOptions": {
    "strict": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "target": "ESNext",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "baseUrl": ".",
    "forceConsistentCasingInFileNames": true,
    "strictPropertyInitialization": true,
    "composite": false,
    "declaration": true,
    "sourceMap": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.json"
  ],
  "exclude": [
    "dist/"
  ]
}
